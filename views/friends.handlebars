<h1 class="page-title">Friends List</h1>
<form id="new-friend" class="friend-holder">
    <h1>Add Friends</h1>
    <label for="friend-name">Username:</label>
    <input id="friend-name" type="text" name="friend-name">
    <input type="submit" id="add-btn" value="Search">
</form>

{{#each friends as |friend|}}
<div class="friend-holder">
    <h1>{{friend.username}}</h1>
    <div class="wins-losses">
        <p>Wins: {{friend.ttt_wins}}</p>
        <p>Losses: {{friend.ttt_losses}}</p>
    </div>
    <button data-game-id="{{friend.game_id}}" data-user-id="{{friend.user_id}}" data-friend-id="{{friend.friend_id}}" data-friendship-id="{{friend.friendship_id}}" class="new-game-button">New Game</button>
</div>
{{/each}}

<script src="/js/handleAddFriend.js"></script>
<script src="/js/friendsList.js"></script>
